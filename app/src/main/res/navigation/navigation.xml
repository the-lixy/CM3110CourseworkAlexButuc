<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/routesFragment">
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.hikingweatherapp.settingsFragment"
        android:label="fragment_settings"
        tools:layout="@layout/fragment_settings" />
    <fragment
        android:id="@+id/routesFragment"
        android:name="com.hikingweatherapp.routesFragment"
        android:label="fragment_routes"
        tools:layout="@layout/fragment_routes" >
        <action
            android:id="@+id/routes_to_settings"
            app:destination="@id/settingsFragment" />
    </fragment>
</navigation>